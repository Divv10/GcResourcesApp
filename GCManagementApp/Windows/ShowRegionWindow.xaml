<Window x:Class="GCManagementApp.Windows.ShowRegionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStyle="None" Background="Transparent" AllowsTransparency="True"
        Title="GetScreenWindow" Height="450" Width="800" >
    <Grid>
      <Button IsCancel="True" IsDefault="True" Style="{x:Null}" Command="{Binding CloseWindow}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
      <Label HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="50" MinHeight="20" Background="Red" Foreground="White" Content="{Binding WindowSize}" FontSize="15"/>
      <Border BorderThickness="2" Background="Transparent" BorderBrush="Red"/>
   </Grid>
</Window>
