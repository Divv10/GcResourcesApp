<UserControl x:Class="GCManagementApp.UserControls.EnergyCalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GCManagementApp.UserControls"
             xmlns:statics="clr-namespace:GCManagementApp.Static"
             xmlns:converters="clr-namespace:GCManagementApp.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:validationRules="clr-namespace:GCManagementApp.ValidationRules"
             xmlns:properties="clr-namespace:GCManagementApp.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="1050" d:DesignWidth="2000">
   <UserControl.Resources>
      <converters:IntToStringConverter x:Key="IntToStringConverter"/>
      <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
   </UserControl.Resources>
   <ScrollViewer HorizontalScrollBarVisibility="Auto">
      <StackPanel Orientation="Vertical" Margin="10">
         <materialDesign:Card Margin="0,5">
            <Grid>
               <Grid.RowDefinitions>
                  <RowDefinition/>
                  <RowDefinition/>
               </Grid.RowDefinitions>
               <TextBlock Grid.ColumnSpan="4" Margin="10,5" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Text="{x:Static properties:Resources.WeeklyEnergyGain}" />
               <StackPanel Grid.Row="1" HorizontalAlignment="Left" Orientation="Horizontal">
                  <Image Source="/GCManagementApp;component/Resources/Materials/Energy.png" Height="55"/>
                  <TextBox Text="{Binding Source={x:Static statics:Energy.EnergyNaturalRegen}, Path=.}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.DailyEnergy}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.EnergyFromNaturalRegen}" ToolTip="{x:Static properties:Resources.EnergyFromNaturalRegen}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <TextBox Text="{Binding Source={x:Static statics:Energy.EnergyMailAds}, Path=.}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.WeeklyEnergyGain}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.EnergyFromAdsInMail}" ToolTip="{x:Static properties:Resources.EnergyFromAdsInMail}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <TextBox Text="{Binding EnergyShopAds}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.Ads}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.EnergyFromAdsInShop}" ToolTip="{x:Static properties:Resources.EnergyFromAdsInShop}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="-35,0,0,5">

                     <materialDesign:PopupBox StaysOpen="True">
                        <materialDesign:PopupBox.ToggleContent>
                           <materialDesign:PackIcon Kind="PlaylistEdit" Height="25" Width="25" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </materialDesign:PopupBox.ToggleContent>
                        <Grid Width="300" Margin="8,8,8,8">
                           <Grid.RowDefinitions>
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                           </Grid.RowDefinitions>
                           <TextBlock Margin="0,0,8,0" VerticalAlignment="Center" TextWrapping="Wrap" Text="{x:Static properties:Resources.BasedOnMyExperienceYouGain}" />
                           <TextBox Grid.Row="1" Margin="0,10" materialDesign:HintAssist.Hint="{x:Static properties:Resources.EnergyFromAdsInShop}" Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                              <TextBox.Text>
                                 <Binding Path="EnergyShopAds" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                       <validationRules:MinimumIntValueValidationRule MinimumIntValue="0" />
                                    </Binding.ValidationRules>
                                 </Binding>
                              </TextBox.Text>
                           </TextBox>
                           <StackPanel Grid.Row="5" HorizontalAlignment="Right" Orientation="Horizontal">
                              <Button Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}" Content="OK" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                           </StackPanel>
                        </Grid>
                     </materialDesign:PopupBox>
                  </StackPanel>
                  <TextBox Text="{Binding Source={x:Static statics:Energy.EnergyWeekly}, Path=.}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.Weekly}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.WeeklyMissionsAndLogin}" ToolTip="{x:Static properties:Resources.WeeklyMissionsAndLogin}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <TextBox Text="{Binding Source={x:Static statics:Energy.EnergyDaily}, Path=.}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.Daily}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.DailyLogin}" ToolTip="{x:Static properties:Resources.DailyLogin}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <TextBox Text="{Binding VulcanusTotalEnergy, Mode=OneWay}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.Vulcanus}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.RewardFromVulcanus}" ToolTip="{x:Static properties:Resources.RewardFromVulcanus}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="-35,0,0,5">
                     <materialDesign:PopupBox StaysOpen="True">
                        <materialDesign:PopupBox.ToggleContent>
                           <materialDesign:PackIcon Kind="PlaylistEdit" Height="25" Width="25" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </materialDesign:PopupBox.ToggleContent>
                        <Grid Width="300" Margin="8,8,8,8">
                           <Grid.RowDefinitions>
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                           </Grid.RowDefinitions>
                           <TextBlock Margin="0,0,8,0" VerticalAlignment="Center" TextWrapping="Wrap" Text="{x:Static properties:Resources.EnterHowManyVulcanusRanks}" />
                           <TextBox Grid.Row="1" Margin="0,10" materialDesign:HintAssist.Hint="{x:Static properties:Resources.NumberOfRanksCleared}" Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                              <TextBox.Text>
                                 <Binding Path="VulcaRanksClear" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                       <validationRules:MinimumIntValueValidationRule MinimumIntValue="0" />
                                       <validationRules:MaximumIntValueValidationRule MaximumIntValue="12" />
                                    </Binding.ValidationRules>
                                 </Binding>
                              </TextBox.Text>
                           </TextBox>
                           <ComboBox Grid.Row="2" Margin="0,10"
                                     materialDesign:HintAssist.Hint="{x:Static properties:Resources.VulcanusDivision}" 
                                     Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                     SelectedValue="{Binding VulcanusRank}" ItemsSource="{Binding VulcanusRanks}" SelectedValuePath="Key" >
                              <ComboBox.ItemTemplate>
                                 <DataTemplate>
                                    <Grid>
                                       <Label Content="{Binding Key}" HorizontalAlignment="Left"/>
                                       <Label Content="{Binding Value}" ContentStringFormat="{x:Static properties:Resources.XEnergy}" HorizontalAlignment="Right"/>
                                    </Grid>
                                 </DataTemplate>
                              </ComboBox.ItemTemplate>
                           </ComboBox>
                           <StackPanel Grid.Row="3" HorizontalAlignment="Right" Orientation="Horizontal">
                              <Button Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}" Content="OK" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                           </StackPanel>
                        </Grid>
                     </materialDesign:PopupBox>
                  </StackPanel>
                  <TextBox Text="{Binding TotalEnergyFromAllPacks, Mode=OneWay}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.EnergyPackage}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.BonusEnergyFromPack}" ToolTip="{x:Static properties:Resources.BonusEnergyFromPack}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="-35,0,0,5">
                     <materialDesign:PopupBox StaysOpen="True">
                        <materialDesign:PopupBox.ToggleContent>
                           <materialDesign:PackIcon Kind="PlaylistEdit" Height="25" Width="25" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </materialDesign:PopupBox.ToggleContent>
                        <Grid Width="400" Margin="8,8,8,8">
                           <Grid.RowDefinitions>
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                           </Grid.RowDefinitions>
                           <TextBlock Margin="0,0,8,0" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="{x:Static properties:Resources.EnergyPackageOptions}"  FontWeight="DemiBold"/>
                           <TextBlock Grid.Row="1" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{x:Static properties:Resources.EnergySupportPackage}" />
                           <ToggleButton Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" IsChecked="{Binding IsEnergySupportPackageBought}" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                           <TextBlock Grid.Row="2" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{x:Static properties:Resources.EnergySupportPackage2}" />
                           <ToggleButton Grid.Row="2" HorizontalAlignment="Right" IsChecked="{Binding IsEnergySupportPackage2Bought}" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                           <TextBlock Grid.Row="3" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{x:Static properties:Resources.DailyAdventureSpecUp}" />
                           <ToggleButton Grid.Row="3" HorizontalAlignment="Right" IsChecked="{Binding IsDailySpecUpPackBought}" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                           <TextBlock Grid.Row="4" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{x:Static properties:Resources.SpecialEnergyPackagePremium}" />
                           <ToggleButton Grid.Row="4" HorizontalAlignment="Right" IsChecked="{Binding IsSpecialEnergyPackPremiumBought}" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                           <TextBlock Grid.Row="5" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{x:Static properties:Resources.SpecialEnergyPackageBasic}" />
                           <ToggleButton Grid.Row="5" HorizontalAlignment="Right" IsChecked="{Binding IsSpecialEnergyPackBasicBought}" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                           <TextBlock Grid.Row="6" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{x:Static properties:Resources.EnergySupplyPackage}" />
                           <ToggleButton Grid.Row="6" HorizontalAlignment="Right" IsChecked="{Binding IsEnergySupplyPackageBought}" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                           <TextBlock Grid.Row="7" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{x:Static properties:Resources.EnergyFromGems}" />
                           <ToggleButton Grid.Row="7" HorizontalAlignment="Right" IsChecked="{Binding IsEnergyForGemsBought}" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                           <TextBlock Grid.Row="8" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{x:Static properties:Resources.AdditionalEnergyBoughtWeekly}" />
                           <TextBox Grid.Row="8" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Right" Style="{StaticResource MaterialDesignTextBox}" Width="80" Text="{Binding TotalEnergyBought, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                           <TextBlock Grid.Row="9" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" FontWeight="SemiBold" Text="{x:Static properties:Resources.TotalEnergyFromPackages}" />
                           <TextBlock Grid.Row="9" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Right" TextWrapping="Wrap" FontWeight="SemiBold" Text="{Binding TotalEnergyFromAllPacks}" />
                           <TextBlock Grid.Row="10" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{x:Static properties:Resources.EnergyPackWithBGBoost}" />
                           <ToggleButton Grid.Row="10" HorizontalAlignment="Right" IsChecked="{Binding IsEnergyPackBought}" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" ToolTip="{x:Static properties:Resources.MarkIfYouAreBuyingPackWithBGBoost}" />
                           <TextBlock Grid.Row="11" Margin="0,10" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Energy pack with EC boost" />
                           <ToggleButton Grid.Row="11" HorizontalAlignment="Right" IsChecked="{Binding IsECBoostActive}" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" ToolTip="Select if the packs You buy contains Evolution Cubes drop boost" />
                           <StackPanel Grid.Row="13" HorizontalAlignment="Right" Orientation="Horizontal">
                              <Button Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}" Content="{x:Static properties:Resources.OK}" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                           </StackPanel>
                        </Grid>
                     </materialDesign:PopupBox>
                  </StackPanel>
                  <TextBox Text="{Binding EnergyTotalWeekly, Mode=OneWay}" FontWeight="Medium" materialDesign:HintAssist.Hint="{x:Static properties:Resources.TotalWeekly}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.SumOfAllPrevious}" ToolTip="{x:Static properties:Resources.SumOfAllPrevious}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
               </StackPanel>
            </Grid>
         </materialDesign:Card>
         <materialDesign:Card Margin="0,5"/>
            <materialDesign:Card Margin="0,5">
            <Grid>
               <Grid.RowDefinitions>
                  <RowDefinition/>
                  <RowDefinition/>
                  <RowDefinition/>
                  <RowDefinition/>
               </Grid.RowDefinitions>
               <TextBlock Grid.ColumnSpan="4" Margin="10,5" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Text="Weekly Growth Essence gain" />
               <StackPanel Grid.Row="1" HorizontalAlignment="Left" Orientation="Horizontal">
                  <Image Source="/GCManagementApp;component/Resources/Materials/GrowthEssenceAssault.png" Height="55" />
                  <TextBox Text="{Binding GrowthEssenceFromDefenceMode, Mode=OneWay}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.GEFromDefenseMode}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.GEFromDefenseMode}" ToolTip="{x:Static properties:Resources.GEFromDefenseMode}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <TextBox Text="{Binding GrowthEssenceFromEnergy, Mode=OneWay}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.GEFromEnergy}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.GEFromEnergy}" ToolTip="{x:Static properties:Resources.GEFromEnergy}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <TextBox Text="{Binding GrowthEssencesTotalWeekly, Mode=OneWay}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.TotalGEWeekly}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.TotalGEWeekly}" ToolTip="{x:Static properties:Resources.TotalGEWeekly}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
               </StackPanel>
               <StackPanel Grid.Row="2" HorizontalAlignment="Left" Orientation="Horizontal" Height="55">
                  <TextBox Text="{Binding Source={x:Static statics:GrowthEssences.GrowthEssencesNeededForFullChaser}, Path=.}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.CL25Cost}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.CostOfCL25InGE}" ToolTip="{x:Static properties:Resources.CostOfCL25InGE}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="65,0,10,0" Width="120" IsReadOnly="True"/>
                  <TextBox Text="{Binding SoulEssencesCSWeeksNeeded, Mode=OneWay, StringFormat='{}{0:F2}'}" FontWeight="Medium" materialDesign:HintAssist.Hint="{x:Static properties:Resources.WeeksNeeded}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.WeeksForFullCS}" ToolTip="{x:Static properties:Resources.WeeksForFullCS}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
               </StackPanel>
               <StackPanel Grid.Row="3" HorizontalAlignment="Left" Orientation="Horizontal" Height="55">
                  <TextBox Text="{Binding Source={x:Static statics:GrowthEssences.GrowthEssencesNeededForFullSI}, Path=.}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.SI15Cost}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.CostOfSI15InGE}" ToolTip="{x:Static properties:Resources.CostOfSI15InGE}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="65,0,10,0" Width="120" IsReadOnly="True"/>
                  <TextBox Text="{Binding SoulEssencesSIWeeksNeeded, Mode=OneWay, StringFormat='{}{0:F2}'}" FontWeight="Medium" materialDesign:HintAssist.Hint="{x:Static properties:Resources.WeeksNeeded}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.WeeksForFullSI}" ToolTip="{x:Static properties:Resources.WeeksForFullSI}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
               </StackPanel>
            </Grid>
         </materialDesign:Card>
         <materialDesign:Card Margin="0,5">
            <Grid>
               <Grid.RowDefinitions>
                  <RowDefinition/>
                  <RowDefinition/>
               </Grid.RowDefinitions>
               <TextBlock Grid.ColumnSpan="4" Margin="10,5" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Text="{x:Static properties:Resources.WeeklyBoVGain}" />
               <StackPanel Grid.Row="1" HorizontalAlignment="Left" Orientation="Horizontal">
                  <Image Source="/GCManagementApp;component/Resources/Materials/BlessingOfValor.png" Height="55" />
                  <TextBox Text="{Binding BoVFromEnergy, Mode=OneWay}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.BovFromEnergy}" materialDesign:HintAssist.HelperText="BoV from energy" ToolTip="BoV from energy" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <TextBox Text="{Binding BoVFromLab, Mode=OneWay}" materialDesign:HintAssist.Hint="{x:Static properties:Resources.BoVFromLab}" materialDesign:HintAssist.HelperText="BoV from WL" ToolTip="BoV from WL" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="-35,0,0,5">
                     <materialDesign:PopupBox StaysOpen="True">
                        <materialDesign:PopupBox.ToggleContent>
                           <materialDesign:PackIcon Kind="PlaylistEdit" Height="25" Width="25" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </materialDesign:PopupBox.ToggleContent>
                        <Grid Width="300" Margin="8,8,8,8">
                           <Grid.RowDefinitions>
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                           </Grid.RowDefinitions>
                           <TextBlock Margin="0,0,0,15" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="DemiBold" TextWrapping="Wrap" Text="Additional entries" />
                           <TextBlock Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{x:Static properties:Resources.ResetWithGems1}" />
                           <ToggleButton Grid.Row="1" Margin="0,10" HorizontalAlignment="Right" IsChecked="{Binding IsLabGemReset}" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                           <TextBlock Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{x:Static properties:Resources.DailyEntryPackage1}" />
                           <ToggleButton Grid.Row="2" Margin="0,10" HorizontalAlignment="Right" IsChecked="{Binding IsDailyEntryPackageBought}" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                           <TextBlock Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{x:Static properties:Resources.DailyEntryEssentialPackage}" />
                           <ToggleButton Grid.Row="3" Margin="0,10" HorizontalAlignment="Right" IsChecked="{Binding IsDailyEntryPackageEssentialBought}" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                           <StackPanel Grid.Row="5" HorizontalAlignment="Right" Orientation="Horizontal">
                              <Button Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}" Content="OK" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                           </StackPanel>
                        </Grid>
                     </materialDesign:PopupBox>
                  </StackPanel>
                  <!-- This part is new section -->
                  <TextBox Text="{Binding BoVFromItemShop, Mode=OneWay}" materialDesign:HintAssist.Hint="BoV from shop" materialDesign:HintAssist.HelperText="BoV from weekly package" ToolTip="BoV from weekly package" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <!-- This part is the edit button with the popup definition -->
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="-35,0,0,5">
                     <materialDesign:PopupBox StaysOpen="True">
                        <materialDesign:PopupBox.ToggleContent>
                           <materialDesign:PackIcon Kind="PlaylistEdit" Height="25" Width="25" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </materialDesign:PopupBox.ToggleContent>
                        <Grid Width="300" Margin="8,8,8,8">
                           <Grid.RowDefinitions>
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                           </Grid.RowDefinitions>
                           <TextBlock Margin="0,0,0,15" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="DemiBold" TextWrapping="Wrap" Text="BoV from item shop" />
                           <TextBlock Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Weekly 1000 BoV package (300gems)" />
                           <ToggleButton Grid.Row="1" Margin="0,10" HorizontalAlignment="Right" IsChecked="{Binding IsWeeklyBoVPackBought}" Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                           <StackPanel Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal">
                              <Button Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}" Content="OK" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                           </StackPanel>
                        </Grid>
                     </materialDesign:PopupBox>
                  </StackPanel>
                  <!-- end of popup definition -->
                        <TextBox Text="{Binding BoVFromMercShop, Mode=OneWay}" materialDesign:HintAssist.Hint="BoV from Mercuria" materialDesign:HintAssist.HelperText="BoV from Mercuria shop" ToolTip="BoV from Mercuria Shop" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="-35,0,0,5">
                            <materialDesign:PopupBox StaysOpen="True">
                                <materialDesign:PopupBox.ToggleContent>
                                    <materialDesign:PackIcon Kind="PlaylistEdit" Height="25" Width="25" Foreground="{DynamicResource MaterialDesignBody}"/>
                                </materialDesign:PopupBox.ToggleContent>
                                <Grid Width="300" Margin="8,8,8,8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Margin="0,0,8,0" VerticalAlignment="Center" TextWrapping="Wrap" Text="Enter how many BoV You get from Mercuria Shop" />
                                    <TextBox Grid.Row="1" Margin="0,10" materialDesign:HintAssist.Hint="Additional BoV from Mercuria Shop" Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                        <TextBox.Text>
                                            <Binding Path="BoVFromMercShop" UpdateSourceTrigger="PropertyChanged">
                                                <Binding.ValidationRules>
                                                    <validationRules:MinimumIntValueValidationRule MinimumIntValue="0" />
                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                    </TextBox>
                                    <StackPanel Grid.Row="5" HorizontalAlignment="Right" Orientation="Horizontal">
                                        <Button Command="{x:Static materialDesign:PopupBox.ClosePopupCommand}" Content="OK" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:PopupBox>
                        </StackPanel>
                        <TextBox Text="{Binding BoVTotalWeekly, Mode=OneWay}" FontWeight="Medium" materialDesign:HintAssist.Hint="{x:Static properties:Resources.TotalWeekly}" materialDesign:HintAssist.HelperText="{x:Static properties:Resources.SumOfAllPrevious}" ToolTip="{x:Static properties:Resources.SumOfAllPrevious}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
               </StackPanel>
            </Grid>
         </materialDesign:Card>
         <materialDesign:Card Margin="0,5">
            <Grid>
               <Grid.RowDefinitions>
                  <RowDefinition/>
                  <RowDefinition/>
               </Grid.RowDefinitions>
               <TextBlock Grid.ColumnSpan="4" Margin="10,5" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Text="Weekly Evolution Cubes gain" />
               <StackPanel Grid.Row="1" HorizontalAlignment="Left" Orientation="Horizontal">
                  <Image Source="/GCManagementApp;component/Resources/Materials/EvoCube.png" Height="55" />
                  <TextBox Text="{Binding ECFromEnergy, Mode=OneWay}" materialDesign:HintAssist.Hint="EC from energy" materialDesign:HintAssist.HelperText="Total EC from adventure" ToolTip="Total EC from adventure" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <TextBox Text="{Binding ECFromLab, Mode=OneWay}" materialDesign:HintAssist.Hint="EC from WL" materialDesign:HintAssist.HelperText="Weekly EC from Lab" ToolTip="Weekly EC from Lab" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Margin="10,0" Width="120" IsReadOnly="True"/>
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="-35,0,0,5">
                     <materialDesign:PopupBox StaysOpen="True">
                        <materialDesign:PopupBox.ToggleContent>
                           <materialDesign:PackIcon Kind="PlaylistEdit" Height="25" Width="25" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </materialDesign:PopupBox.ToggleContent>
                        <Grid Width="300" Margin="8,8,8,8">
                           <Grid.RowDefinitions>
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                           </Grid.RowDefinitions>
                           <TextBlock Margin="0,0,0,15" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="DemiBold" TextWrapping="Wrap" Text="Additional entries" />
