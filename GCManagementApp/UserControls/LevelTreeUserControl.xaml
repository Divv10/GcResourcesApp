<UserControl x:Class="GCManagementApp.UserControls.LevelTreeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GCManagementApp.UserControls"
             xmlns:converters="clr-namespace:GCManagementApp.Converters"
             xmlns:enums="clr-namespace:GCManagementApp.Enums"
             mc:Ignorable="d" 
             Height="200" Width="200">

    <UserControl.Resources>
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" Grid.Column="0" Source="/GCManagementApp;component/Resources/LevelTraits/CritChance.png" Margin="2" />
        <Image Grid.Row="0" Grid.Column="1" Source="/GCManagementApp;component/Resources/LevelTraits/SkillCooldownReduction.png" Margin="2" />
        <Image Grid.Row="0" Grid.Column="2" Source="/GCManagementApp;component/Resources/LevelTraits/BasicAtkSpeedIncrease.png" Margin="2" />
        <Image Grid.Row="1" Grid.Column="0" Source="/GCManagementApp;component/Resources/LevelTraits/BasicAtkDamageReduction.png" Margin="2" />
        <Image Grid.Row="1" Grid.Column="1" Source="/GCManagementApp;component/Resources/LevelTraits/SkillAtkDamageReduction.png" Margin="2" />
        <Image Grid.Row="1" Grid.Column="2" Source="/GCManagementApp;component/Resources/LevelTraits/BasicAtkDamageIncrease.png" Margin="2" />
        <Image Grid.Row="2" Grid.Column="0" Source="/GCManagementApp;component/Resources/LevelTraits/SkillAtkDamageIncrease.png" Margin="2" />
        <Image Grid.Row="2" Grid.Column="1" Source="/GCManagementApp;component/Resources/LevelTraits/TrueDamageIncrease.png" Margin="2" />
        <Image Grid.Row="2" Grid.Column="2" Source="/GCManagementApp;component/Resources/LevelTraits/HealingReceivedIncrease.png" Margin="2" />

        <Border Grid.Row="0" Grid.Column="0" Width="25" Height="25" Visibility="{Binding Path=LevelTraits[(enums:LevelTraitEnum)CritChance], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,2,2" CornerRadius="10,0,0,0" BorderBrush="Black" BorderThickness="1" >
            <Label Padding="2,4,0,0" HorizontalAlignment="Center" Content="{Binding Path=LevelTraits[(enums:LevelTraitEnum)CritChance]}" Foreground="{StaticResource MaterialDesignBody}"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" Width="25" Height="25" Visibility="{Binding Path=LevelTraits[(enums:LevelTraitEnum)SkillCooldownReduction], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,2,2" CornerRadius="10,0,0,0" BorderBrush="Black" BorderThickness="1" >
            <Label Padding="2,4,0,0" HorizontalAlignment="Center" Content="{Binding Path=LevelTraits[(enums:LevelTraitEnum)SkillCooldownReduction]}" Foreground="{StaticResource MaterialDesignBody}"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="2" Width="25" Height="25" Visibility="{Binding Path=LevelTraits[(enums:LevelTraitEnum)BasicAtkSpeedIncrease], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,2,2" CornerRadius="10,0,0,0" BorderBrush="Black" BorderThickness="1" >
            <Label Padding="2,4,0,0" HorizontalAlignment="Center" Content="{Binding Path=LevelTraits[(enums:LevelTraitEnum)BasicAtkSpeedIncrease]}" Foreground="{StaticResource MaterialDesignBody}"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="0" Width="25" Height="25" Visibility="{Binding Path=LevelTraits[(enums:LevelTraitEnum)BasicAtkDamageReduction], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,2,2" CornerRadius="10,0,0,0" BorderBrush="Black" BorderThickness="1" >
            <Label Padding="2,4,0,0" HorizontalAlignment="Center" Content="{Binding Path=LevelTraits[(enums:LevelTraitEnum)BasicAtkDamageReduction]}" Foreground="{StaticResource MaterialDesignBody}"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="1" Width="25" Height="25" Visibility="{Binding Path=LevelTraits[(enums:LevelTraitEnum)SkillAtkDamageReduction], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,2,2" CornerRadius="10,0,0,0" BorderBrush="Black" BorderThickness="1" >
            <Label Padding="2,4,0,0" HorizontalAlignment="Center" Content="{Binding Path=LevelTraits[(enums:LevelTraitEnum)SkillAtkDamageReduction]}" Foreground="{StaticResource MaterialDesignBody}"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="2" Width="25" Height="25" Visibility="{Binding Path=LevelTraits[(enums:LevelTraitEnum)BasicAtkDamageIncrease], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,2,2" CornerRadius="10,0,0,0" BorderBrush="Black" BorderThickness="1" >
            <Label Padding="2,4,0,0" HorizontalAlignment="Center" Content="{Binding Path=LevelTraits[(enums:LevelTraitEnum)BasicAtkDamageIncrease]}" Foreground="{StaticResource MaterialDesignBody}"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="0" Width="25" Height="25" Visibility="{Binding Path=LevelTraits[(enums:LevelTraitEnum)SkillAtkDamageIncrease], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,2,2" CornerRadius="10,0,0,0" BorderBrush="Black" BorderThickness="1" >
            <Label Padding="2,4,0,0" HorizontalAlignment="Center" Content="{Binding Path=LevelTraits[(enums:LevelTraitEnum)SkillAtkDamageIncrease]}" Foreground="{StaticResource MaterialDesignBody}"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="1" Width="25" Height="25" Visibility="{Binding Path=LevelTraits[(enums:LevelTraitEnum)TrueDamageIncrease], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,2,2" CornerRadius="10,0,0,0" BorderBrush="Black" BorderThickness="1" >
            <Label Padding="2,4,0,0" HorizontalAlignment="Center" Content="{Binding Path=LevelTraits[(enums:LevelTraitEnum)SkillAtkDamageIncrease]}" Foreground="{StaticResource MaterialDesignBody}"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="2" Width="25" Height="25" Visibility="{Binding Path=LevelTraits[(enums:LevelTraitEnum)HealingReceivedIncrease], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,2,2" CornerRadius="10,0,0,0" BorderBrush="Black" BorderThickness="1" >
            <Label Padding="2,4,0,0" HorizontalAlignment="Center" Content="{Binding Path=LevelTraits[(enums:LevelTraitEnum)HealingReceivedIncrease]}" Foreground="{StaticResource MaterialDesignBody}"/>
        </Border>
    </Grid>
</UserControl>
