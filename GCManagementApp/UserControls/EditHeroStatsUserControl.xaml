						<Slider Grid.Row="2" Maximum="{x:Static static:StaticValues.MaxArtifactUpgrade}" Value="{Binding SelectedHeroGrowth.Equipment.ArtifactUpgrade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsTabStop="False"/>
