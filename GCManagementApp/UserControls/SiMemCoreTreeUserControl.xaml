<UserControl x:Class="GCManagementApp.UserControls.SiMemCoreTreeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GCManagementApp.UserControls"
             xmlns:converters="clr-namespace:GCManagementApp.Converters"
             xmlns:enums="clr-namespace:GCManagementApp.Enums"
             mc:Ignorable="d" 
             Height="310" Width="300">

    <UserControl.Resources>
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
    </UserControl.Resources>
    
    <Grid>
        <Image Source="/GCManagementApp;component/Resources/SiTemplates/SiMemCoreTemplate.png" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="54"/>
                <RowDefinition Height="54"/>
                <RowDefinition Height="54"/>
                <RowDefinition Height="54"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="54"/>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="54"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="0" Width="20" Height="20" Visibility="{Binding Path=SiMemTrait[0][0], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0.5,0.5" CornerRadius="4,0,0,0" BorderBrush="Black" BorderThickness="0.6" >
                <Label Padding="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Path=SiMemTrait[0][0]}" Foreground="{StaticResource MaterialDesignBody}" Height="Auto" Width="Auto"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="2" Width="20" Height="20" Visibility="{Binding Path=SiMemTrait[0][1], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0.5,0.5" CornerRadius="4,0,0,0" BorderBrush="Black" BorderThickness="0.6" >
                <Label Padding="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Path=SiMemTrait[0][1]}" Foreground="{StaticResource MaterialDesignBody}" Height="Auto" Width="Auto"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="3" Width="20" Height="20" Visibility="{Binding Path=SiMemTrait[0][2], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0.5,0.5" CornerRadius="4,0,0,0" BorderBrush="Black" BorderThickness="0.6" >
                <Label Padding="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Path=SiMemTrait[0][2]}" Foreground="{StaticResource MaterialDesignBody}" Height="Auto" Width="Auto"/>
            </Border>
            <Border Grid.Row="1" Grid.Column="1" Width="20" Height="20" Visibility="{Binding Path=SiMemTrait[0][3], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,0.5" CornerRadius="4,0,0,0" BorderBrush="Black" BorderThickness="0.6" >
                <Label Padding="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Path=SiMemTrait[0][3]}" Foreground="{StaticResource MaterialDesignBody}" Height="Auto" Width="Auto"/>
            </Border>
            <Border Grid.Row="2" Grid.Column="2" Width="20" Height="20" Visibility="{Binding Path=SiMemTrait[0][4], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0.5,0.5" CornerRadius="4,0,0,0" BorderBrush="Black" BorderThickness="0.6" >
                <Label Padding="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Path=SiMemTrait[0][4]}" Foreground="{StaticResource MaterialDesignBody}" Height="Auto" Width="Auto"/>
            </Border>
            <Border Grid.Row="2" Grid.Column="3" Width="20" Height="20" Visibility="{Binding Path=SiMemTrait[0][5], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0.5,0.5" CornerRadius="4,0,0,0" BorderBrush="Black" BorderThickness="0.6" >
                <Label Padding="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Path=SiMemTrait[0][5]}" Foreground="{StaticResource MaterialDesignBody}" Height="Auto" Width="Auto"/>
            </Border>
            <Border Grid.Row="3" Grid.Column="2" Width="20" Height="20" Visibility="{Binding Path=SiMemTrait[0][6], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0.5,0.5" CornerRadius="4,0,0,0" BorderBrush="Black" BorderThickness="0.6" >
                <Label Padding="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Path=SiMemTrait[0][6]}" Foreground="{StaticResource MaterialDesignBody}" Height="Auto" Width="Auto"/>
            </Border>
            <Border Grid.Row="4" Grid.Column="0" Width="20" Height="20" Visibility="{Binding Path=SiMemTrait[0][7], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0.5,0" CornerRadius="4,0,0,0" BorderBrush="Black" BorderThickness="0.6" >
                <Label Padding="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Path=SiMemTrait[0][7]}" Foreground="{StaticResource MaterialDesignBody}" Height="Auto" Width="Auto"/>
            </Border>
            <Border Grid.Row="4" Grid.Column="1" Width="20" Height="20" Visibility="{Binding Path=SiMemTrait[0][8], Converter={StaticResource IntToVisibilityConverter}}" Background="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,0" CornerRadius="4,0,0,0" BorderBrush="Black" BorderThickness="0.6" >
                <Label Padding="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Path=SiMemTrait[0][8]}" Foreground="{StaticResource MaterialDesignBody}" Height="Auto" Width="Auto"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
